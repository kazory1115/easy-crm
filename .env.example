# =================================================
# General Environment Variables
# =================================================
#
# 所有容器的時區設定
TIMEZONE=Asia/Taipei

# =================================================
# Nginx Server Configuration
# =================================================
#
# Nginx 網頁伺服器在主機上的連接埠映射
NGINX_PORT=8180

# =================================================
# PHP-FPM Application Server Configuration
# =================================================
#
# PHP 記憶體限制
PHP_MEMORY_LIMIT=256M
# 檔案上傳的最大大小
PHP_UPLOAD_MAX_FILESIZE=20M
# PHP 接受的 POST 資料的最大大小
PHP_POST_MAX_SIZE=20M

# =================================================
# Main Database (MySQL)
# =================================================
#
# 資料庫連接驅動
DB_CONNECTION=mysql
# 資料庫主機服務名稱 (必須與 docker-compose.yml 中的服務名稱匹配)
DB_HOST=mysql
# 資料庫容器的內部連接埠
DB_PORT=3306
# 主資料庫的名稱
DB_DATABASE=easy_crm_db
# 主資料庫的使用者名稱（MySQL 的 root 使用者）
DB_USERNAME=root
# --- 重要：MySQL root 密碼 ---
# 這個密碼用於 MySQL 的 root 使用者（管理員）
DB_PASSWORD=1234
DB_ROOT_PASSWORD=1234
# 主資料庫在主機上的外部連接埠映射
DB_EXTERNAL_PORT=3406

# =================================================
# Test Database (MySQL)
# =================================================
#
# 測試資料庫的名稱
DB_TEST_DATABASE=easy_crm_test
# 測試資料庫的使用者名稱
DB_TEST_USERNAME=root
# --- 重要：測試資料庫 root 密碼 ---
DB_TEST_PASSWORD=1234
DB_TEST_ROOT_PASSWORD=1234
# 測試資料庫在主機上的外部連接埠映射
DB_TEST_EXTERNAL_PORT=3407

# =================================================
# ECIC Database (MySQL)
# =================================================
#
# ECIC 資料庫的名稱
DB_ECIC_DATABASE=easy_crm_ecic
# ECIC 資料庫的使用者名稱
DB_ECIC_USERNAME=root
# --- 重要：ECIC 資料庫 root 密碼 ---
DB_ECIC_PASSWORD=1234
DB_ECIC_ROOT_PASSWORD=1234
# ECIC 資料庫在主機上的外部連接埠映射
DB_ECIC_EXTERNAL_PORT=3408

# =================================================
# phpMyAdmin (MySQL Management Tool)
# =================================================
#
# phpMyAdmin 網頁介面在主機上的連接埠映射
PHPMYADMIN_PORT=8181

# =================================================
# Laravel Application (Backend)
# =================================================
#
# Laravel 應用程式金鑰（執行 php artisan key:generate 產生）
APP_KEY=
# Laravel 應用程式名稱
APP_NAME="Easy CRM"
# Laravel 執行環境 (local, production, testing)
APP_ENV=local
# Laravel 除錯模式（生產環境請設為 false）
APP_DEBUG=true
# Laravel 應用程式 URL
APP_URL=http://localhost:8180

# Laravel Sanctum Stateful Domains（前端網域，用於 CORS）
SANCTUM_STATEFUL_DOMAINS=localhost,localhost:5173,localhost:3000,127.0.0.1,127.0.0.1:5173,127.0.0.1:3000,localhost:8180,127.0.0.1:8180
# Laravel Session Domain
SESSION_DOMAIN=localhost

# =================================================
# 說明
# =================================================
#
# MySQL 說明：
# - DB_USERNAME=root 是 MySQL 的超級使用者（管理員）
# - DB_PASSWORD 用於 Laravel 應用連接資料庫
# - DB_ROOT_PASSWORD 用於 MySQL 容器的 root 密碼
# - 每個資料庫實例都有獨立的 root 密碼（DB_ROOT_PASSWORD、DB_TEST_ROOT_PASSWORD、DB_ECIC_ROOT_PASSWORD）
#
# phpMyAdmin 使用說明：
# - 訪問 http://localhost:8081 開啟 phpMyAdmin
# - 使用 root 和對應的 DB_ROOT_PASSWORD 登入主資料庫
# - 伺服器選擇：mysql (使用 DB_ROOT_PASSWORD)、mysql_test (使用 DB_TEST_ROOT_PASSWORD) 或 mysql_ecic (使用 DB_ECIC_ROOT_PASSWORD)
#
# 安全性建議：
# - 生產環境請使用強密碼
# - 不要將 .env 檔案提交到版本控制系統
# - 定期更換密碼
#
