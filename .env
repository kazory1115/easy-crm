# =================================================
# 時區
# =================================================
TIMEZONE=Asia/Taipei

# =================================================
# Nginx 對外埠
# =================================================
NGINX_PORT=8180

# =================================================
# phpMyAdmin 對外埠
# =========================
PMA_PORT=8280

# =================================================
# PHP 相關限制
# =================================================
PHP_MEMORY_LIMIT=256M
PHP_UPLOAD_MAX_FILESIZE=20M
PHP_POST_MAX_SIZE=20M

# =================================================
# MySQL 連線設定（對應 docker-compose）
# =================================================
DB_CONNECTION=mysql
DB_HOST=mysql
DB_PORT=3306
DB_DATABASE=easy_crm_db
DB_USERNAME=easycrm
DB_PASSWORD=easycrm_password
# root 密碼僅供資料庫容器使用
DB_ROOT_PASSWORD=1234
# 本機連入 MySQL 的對外埠
DB_EXTERNAL_PORT=3406
